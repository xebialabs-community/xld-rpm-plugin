<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.xebialabs.com/xl-deploy/xl-rules" >

    <rule name="deb.Package.CREATE" scope="deployed">
        <conditions>
            <type>deb.Package</type>
            <operation>CREATE</operation>
        </conditions>
        <steps>
            <os-script>
                <description expression="true">"Install %s" % deployed.name </description>
                <script>deb/create-deb</script>
                <order>60</order>
            </os-script>
            <wait>
                <order>61</order>
                <description expression="true">"Waiting 60 seconds before verifying the deployment"</description>
                <seconds>60</seconds>
            </wait>
        </steps>
    </rule>

    <rule name="deb.Package.DESTROY" scope="deployed">
        <conditions>
            <type>deb.Package</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <os-script>
                <description expression="true">"Uninstall %s" % previousDeployed.packageName</description>
                <script>deb/destroy-deb</script>
                <order>40</order>
            </os-script>
        </steps>
    </rule>

</rules>