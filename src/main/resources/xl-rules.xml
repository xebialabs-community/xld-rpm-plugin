<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.xebialabs.com/xl-deploy/xl-rules" >

    <rule name="rpm.AbstractDeployedRPM.CREATE" scope="deployed">
        <conditions>
            <type>rpm.AbstractDeployedRPM</type>
            <operation>CREATE</operation>
        </conditions>
        <steps>
            <os-script>
                <description>Install rpm</description>
                <script>rpm/create-rpm</script>
                <order>60</order>
            </os-script>
        </steps>
    </rule>

    <rule name="rpm.AbstractDeployedRPM.MODIFY" scope="deployed">
        <conditions>
            <type>rpm.AbstractDeployedRPM</type>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <description>Upgrade rpm</description>
                <script>rpm/modify-rpm</script>
                <order>50</order>
            </os-script>
        </steps>
    </rule>

    <rule name="rpm.AbstractDeployedRPM.DESTROY" scope="deployed">
        <conditions>
            <type>rpm.AbstractDeployedRPM</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <os-script>
                <description>Remove rpm</description>
                <script>rpm/destroy</script>
                <order>40</order>
            </os-script>
        </steps>
    </rule>

</rules>