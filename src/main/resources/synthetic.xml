<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

	<type type="deb.Container" extends="udm.BaseContainer">
		<property name="host" kind="ci" referenced-type="overthere.Host" as-containment="true" />
	</type>

	<type type="deb.Package" extends="udm.BaseDeployed"
		  deployable-type="deb.PackageSpec"
		  container-type="deb.Container"
		  description="Deployed deb package on a remote hosted container.">
		<generate-deployable type="deb.PackageSpec" extends="udm.BaseDeployable"/>
		<property name="packageName" label="Package Name" required="true" kind="string" description="Package name to be installed, like hermes-dashboard"/>
		<property name="version" label="Version" required="true" kind="string" description="Specific version to install, for example, 1.4.4-1."/>
	</type>


</synthetic>
